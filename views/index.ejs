<!-- index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Lista de Posts</title>
</head>
<body>
    <h1>Lista de Posts</h1>
    
    <% var posts = [
        { title: "Título del Post 1", content: "Contenido del Post 1" },
        { title: "Título del Post 2", content: "Contenido del Post 2" },
        { title: "Título del Post 3", content: "Contenido del Post 3" }
    ]; %>

    <ul>
        <% posts.forEach(function(post) { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
            </li>
        <% }); %>
    </ul>
</body>
</html>
